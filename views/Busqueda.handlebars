<div id="Catalogo">
    <div class="container-fluid">
        <div class="row mt-0">
            {{#unless productos}}
            <h6>No se consiguieron resultados en su b√∫squeda</h6>
            {{/unless}}

            {{#each productos}}
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mt-3">
                <div class="card">
                    <img class="card-img-top" src="{{this.url_image}}" alt="Card image">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text">
                            {{this.category}}
                        </p>
                        <b> $ {{this.price}} </b>
                        <a href="/producto/{{this.id}}"><i class="fas fa-shopping-cart"></i>
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</div>

