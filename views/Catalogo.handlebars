<div id="Catalogo">
  <div class="container-fluid">
    <div class="row mx-0">
      {{#each productos}}
      <div class="col-12 col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="card mb-2 shadow-sm">
          <div class="card-header">
            <h6 class="my-0 font-weight-bold text-center">{{this.name}}</h6>
          </div>
          <img class="card-img-top" src="{{this.url_image}}" alt="Card image">
          <div class="card-body text-center font-weight-bold">
            <b class="card-title">$ {{this.price}}</b>
            <a href="/producto/{{this.id}}"><i class="fas fa-shopping-cart text-center"></i></a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<div class="d-flex justify-content-center mt-2">
  <nav aria-label="Page navigation example ">
    <ul class="pagination">
      <li class="page-item" id="prev">
        <a class="page-link " href="/?pag={{prev pag}}">Anterior</a>
      </li>
      <li class="page-item" id="next">
        <a class="page-link " href="/?pag={{next pag pageQ}}">Siguiente</a>
      </li>
    </ul>
  </nav>
</div>

<script>
  const pageQ = {{ pageQ }};
  const page = {{ pag }};
  for (let i = 1; i <= pageQ; i++) {
    $("#next").before(
      i == page ? `
              <li class="page-item bg-dark">
                <a class="page-link text-white" href="/?pag=${i}">${i}</a>
              </li>
             ` :
        `
              <li class="page-item">
                <a class="page-link" href="/?pag=${i}">
                  ${i}
                </a>
              </li>
             `
    )
  }
</script>