                        <p class="card-text">
                            {{this.name}}
                        </p>
                        <b> {{this.price}} </b>
                        <a href="/producto/{{this.id}}" class="d-block">
                            <button class="btn btn-primary">
                                Ver m√°s
                            </button>
                        </a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

