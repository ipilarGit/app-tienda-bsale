<script>
  const pageQ = {{ pageQ }};
  const page = {{ pag }};
  for (let i = 1; i <= pageQ; i++) {
    $("#next").before(
      i == page ? `
              <li class="page-item bg-dark">
                <a class="page-link text-white" href="/?pag=${i}">${i}</a>
              </li>
             ` :
        `
              <li class="page-item">
                <a class="page-link" href="/?pag=${i}">
                  ${i}
                </a>
              </li>
             `
    )
  } 
</script> 